<h1>Quiz - Teacher Page</h1>

<h2><%=@quiz.title%></h2>

<%flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>


<% @quiz.questions.each do |question|  %>

<%=form_for question do |f|%>
<%=f.hidden_field :quiz_id %>
<p><%=f.label :question_title %><br><%=f.text_field :question_title %></p>
<p><%=f.label :question_text %><br><%=f.text_field :question_text %></p>
<%=f.submit "Edit Question"%>
<%end%>


<br><br>
<%question.answers.each do |answer| %>

<%=form_for answer do |f|%>
<%=f.hidden_field :question_id %>
<p><%=f.label :answer_text %><br><%=f.text_field  :answer_text  %></p>
